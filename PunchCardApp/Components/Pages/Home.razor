@code {
    private Tab selectedTab = Tab.Kund;

    private void SelectTab(Tab tab)
    {
        selectedTab = tab;
    }

    private string GetActiveClass(Tab tab)
    {
        return selectedTab == tab ? "active" : "";
    }

    private enum Tab
    {
        Kund,
        Klippkort,
        Uppgifter
    }
}