@using PunchCardApp.Models

@typeparam TItem

@code {
    [CascadingParameter] private TabComponent<TItem> Parent { get; set; } = null!;

    [Parameter] public string Title { get; set; } = null!;
    [Parameter] public RenderFragment Content { get; set; } = null!;

    protected override void OnInitialized()
    {
        var tabItem = new TabItemModel<TItem>
            {
                Title = Title,
                Content = Content
            };

        Parent.AddTab(tabItem);
    }
}